---
import Base from "../layouts/Base.astro";
import ContactForm from "../components/ContactForm.astro";
---
<Base title="SP Hegni – Quality Home Construction" description="New builds, renovations, extensions.">

  <!-- HERO: full width with overlay -->
  <section class="relative w-full">
    <div class="absolute inset-0">
      <img src="/hero/house-1.jpg" alt="Gjørdar uppgávur" class="h-[50vh] md:h-[60vh] w-full object-cover" />
      <div class="absolute inset-0 bg-black/30"></div>
    </div>
    <div class="relative mx-auto max-w-6xl px-4 h-[50vh] md:h-[60vh] flex items-center">
      <div class="max-w-2xl text-white">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight">Vit gera alt fyrifallandi handverksarbeið.</h1>
        <p class="mt-3 text-lg text-white/90">New builds • Renovations • Extensions</p>
        <div class="mt-6 flex gap-3">
          <a href="#Kontakta okkum" class="inline-flex items-center rounded-lg bg-blue-600 px-4 py-2 text-white font-medium hover:bg-blue-700">Get a quote</a>
          <a href="/cases" class="inline-flex items-center rounded-lg border border-white/30 px-4 py-2 text-white font-medium hover:bg-white/10">View cases</a>
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICES -->
  <section class="mx-auto max-w-6xl px-4 py-12 md:py-16">
    <h2 class="mb-6 text-2xl font-semibold text-center">Services</h2>
    <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3">
      <div class="rounded-2xl border shadow-sm bg-white">
        <div class="p-5 text-center">
          <h3 class="text-lg font-semibold">Handverkstænastur Húsaumvælingar</h3>
          <p class="text-slate-600">From foundation to finish.</p>
        </div>
      </div>
      <div class="rounded-2xl border shadow-sm bg-white">
        <div class="p-5 text-center">
          <h3 class="text-lg font-semibold">Renovations</h3>
          <p class="text-slate-600">Upgrade existing spaces.</p>
        </div>
      </div>
      <div class="rounded-2xl border shadow-sm bg-white">
        <div class="p-5 text-center">
          <h3 class="text-lg font-semibold">Extensions</h3>
          <p class="text-slate-600">Expand your home.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FEATURED -->
  <section class="mx-auto max-w-6xl px-4 py-12 md:py-16">
    <h2 class="mb-6 text-2xl font-semibold text-center">Gjørdar uppgávur</h2>
    <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3">
  <div class="col-span-full flex justify-center">
    <a
      href="/cases"
      class="rounded-2xl border shadow-sm bg-white p-6 text-center hover:shadow"
    >
      See all cases →
    </a>
  </div>
</div>

  </section>

  <!-- ABOUT -->
  <section class="mx-auto max-w-6xl px-4 py-12 md:py-16">
    <h2 class="mb-6 text-2xl font-semibold text-center">About</h2>
    <div class="grid gap-6 md:grid-cols-[200px_1fr] items-center">
      <img src="/about/dad.jpg" alt="Founder" class="h-48 w-48 rounded-xl object-cover border mx-auto md:mx-0" />
      <p class="text-slate-700 text-lg">
        Hi, I’m Samal Petur Eiriksson. I’ve been building and fixing homes for over 20 years. My goal is to create solid, beautiful houses where families thrive.
  </section>
        
  <!-- CONTACT -->
<section class="mx-auto max-w-6xl px-4 py-12 md:py-16" id="Kontakta okkum">
  <ContactForm />
</div>
</section>

</Base>