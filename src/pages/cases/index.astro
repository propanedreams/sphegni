---
import Base from "../../layouts/Base.astro";
import { getCollection } from "astro:content";
const items = await getCollection("cases");
---
<Base title="Cases â€“ Builder Name" description="Selected projects and case studies.">
  <div class="mx-auto max-w-6xl px-4 py-12 md:py-16">
    <h1 class="mb-6 text-3xl font-bold">Cases</h1>

    {items.length === 0 ? (
      <p class="text-slate-600">No cases yet. Check back soon.</p>
    ) : (
      <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3">
        {items.map(({ data, slug }) => (
          <a href={`/cases/${slug}`} class="block rounded-2xl border shadow-sm bg-white overflow-hidden hover:shadow">
            {data.cover && <img src={data.cover} alt={data.title} class="h-48 w-full object-cover" loading="lazy" />}
            <div class="p-4">
              <h2 class="font-semibold">{data.title}</h2>
              <p class="text-sm text-slate-600">{data.summary}</p>
            </div>
          </a>
        ))}
      </div>
    )}
  </div>
</Base>
